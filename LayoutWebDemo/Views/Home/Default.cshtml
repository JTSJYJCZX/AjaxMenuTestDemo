@{ 
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        $(function () {
            //$('#displayArea').load('@Href("~/Home/Index")');//初始化加载的子页面
            $('.actionLink').click(function () {
                var url = $(this).data("url");
                console.log('访问路径:' + url);
                $('#displayArea').load(url);
            });
            $($('.actionLink').get(0)).trigger("click");//初始化加载的子页面
        });
       
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="javascript:void(0)" class="actionLink" id="index" data-url='@Url.Action("Index")' data-action-name="Index" data-controller-name="Home">首页</a></li>
                    <li><a href="javascript:void(0)" class="actionLink" id="about" data-url='@Url.Action("About")' data-action-name="About" data-controller-name="Home">关于</a></li>
                    <li><a href="javascript:void(0)" class="actionLink" id="contact" data-url='@Url.Action("OurContact")' data-action-name="Contact" data-controller-name="Home">联系我们</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="displayArea">

        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

</body>
</html>
